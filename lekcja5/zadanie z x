#include<iostream>
#include<algorithm>
#include<ctime>
#include<cstdlib>








int main(){
    std::srand(std::time(nullptr));
    int elem= -1;
    int indeks= -1;
    int T[] = {5,3,6, 2, 8, 7, 4};
    int size = sizeof(T) / sizeof(T[0]);
    int x = rand()%10;
    
    
    std::sort(T, T + size);

    for(int i=0; i < size ; i++){
        std::cout << T[i] << std::endl;
    }
  
    std::cout << std::endl;
    std::cout << x << std::endl ;
    for(int i=0; i<size ; i++ ){
        if(T[i]<= x && T[i] > elem){
            elem=T[i];
            indeks=i;
        }
    }
    if(elem> -1){
        std::cout << "największa liczba najbliższa x to : " << " " << elem << " "  << "ma ona ideks : " << " "  << indeks << std::endl;
    }

    else{
        std::cout << "nie ma w tablicy mniejszejlub równej liczby " << " "  << elem << std::endl;
    }

 





    return 0;
}
